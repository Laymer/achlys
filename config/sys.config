%% -*- mode: erlang;erlang-indent-level: 2;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et
[{achlys , [
    {gc_interval, 45000},
    {sync_dets_on_update , false} ,
    {sync_dets_interval , 3000} ,
    {initial_formation_delay, 10000},
    {formation_check_interval, 3000},

    {initial_task_lookup_delay, 6000},
    {task_lookup_interval, 2000},

    {workers,  #{
            clustering => true,
            cleaning => true,
            sensing => false
        }
    },
    {boards, [
        achlys@my_grisp_board_1 ,
        achlys@my_grisp_board_2 ,
        achlys@my_grisp_board_3
    ]}
]} ,

{plumtree, [
    {broadcast_exchange_timer , 3000} ,
    {broadcast_mods, [lasp_plumtree_backend]}
]} ,

{partisan , [
    {peer_port, 27000},
    {partisan_peer_service_manager , partisan_default_peer_service_manager}
]} ,

{lasp , [
    {membership , false} ,
    {storage_backend , lasp_ets_storage_backend}
]} ,

{kernel, [
  {logger_level, debug},
  {logger, [
        %% Console logger
        {handler, default, logger_std_h,
           #{level => debug,
            formatter => {logger_formatter , #{single_line => true}}}
        },

        %% Disk logger for debug
        {handler, disk_log, logger_disk_log_h,
           #{config => #{
                file => "logs/debug",
                type => wrap,
                max_no_files => 10,
                max_no_bytes => 8192 % 10 x 8KB
             },
             level => debug,
             formatter => {logger_formatter , #{single_line => true, max_size => 256}}}
        }
    ]}
]},

{grisp , [
    {drivers , [
        {spi , grisp_spi_drv} ,
        {gpio , grisp_gpio_drv} ,
        {i2c , grispi2c_drv}
    ]} ,
    {devices , [

    ]}
]}].
